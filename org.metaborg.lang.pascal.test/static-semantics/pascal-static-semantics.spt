module pascal-static-semantics

language Pascal
start symbol Program

test variable reference [[ 
  program example0 () ;
  var
    [[x]] : boolean;
  begin
    x := [[x]]
  end.
]] resolve #2 to #1 

test variable reference [[ 
  program example0 () ;
  var
    x : boolean;
  procedure f([[x]] : integer); 
    begin      
      x := [[x]]
    end;
  begin
  end.
]] resolve #2 to #1 